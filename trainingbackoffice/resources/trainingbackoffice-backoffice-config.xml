<config xmlns="http://www.hybris.com/cockpit/config"
		xmlns:na="http://www.hybris.com/cockpitng/config/notifications"
		xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch"
		xmlns:advance-search="http://www.hybris.com/cockpitng/config/advancedsearch"
		xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
		xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree">

	<context merge-by="module" component="editorareaactions" type="Consignment">
		<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
			<y:group qualifier="common">
				<y:label>actiongroup.common</y:label>				
				<y:action action-id="de.hybris.training.backoffice.actions.confirmpickupaction" property="currentObject"/>				
			</y:group>
		</y:actions>
    </context>

	<!-- Notification Area-->
	<context component="notification-area">
	    <na:notification-area>	        
	        <na:notifications eventType="trainingbackoffice.confirmpickup.event" level="SUCCESS">
	            <na:message>hmc.action.confirmpickup.success</na:message>
	        </na:notifications>
	   </na:notification-area>
	</context>

	<!--simple-search-->
	<context merge-by="type" parent="GenericItem" type="ManufacturerInfo" component="simple-search">
		<simple-search:simple-search xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch">
			<simple-search:field xmlns="http://www.hybris.com/cockpitng/config/simplesearch" name="code"/>
			<simple-search:field xmlns="http://www.hybris.com/cockpitng/config/simplesearch" name="id"/>
		</simple-search:simple-search>
	</context>

	<!--advanced-search-->   <!-- parent="GenericItem"-->
	<context merge-by="type" parent="Voucher" type="ManufacturerInfo" component="advanced-search">
		<advanced-search:advanced-search xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
			<advanced-search:field-list>
				<advanced-search:field xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="name" operator="contains" selected="true"/>
				<advanced-search:field xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="establishmentYear" operator="equals" selected="true"/>
			</advanced-search:field-list>
		</advanced-search:advanced-search>
	</context>

	<!--List view configuration-->
	<context merge-by="type" parent="GenericItem" type="ManufacturerInfo" component="listview">
		<list-view:list-view xmlns:list-view="http://www.hybris.com/cockpitng/component/listView">
			<list-view:column qualifier="id"/>
			<list-view:column qualifier="name"/>
			<list-view:column qualifier="establishmentYear"/>
		</list-view:list-view>
	</context>

	<context component="explorer-tree" parent="auto" merge-by="type">
		<explorer-tree:explorer-tree xmlns="http://www.hybris.com/cockpitng/config/explorertree">
			<explorer-tree:navigation-node id="hmc_treenode_manufactureerinfo">
				<explorer-tree:type-node code="ManufacturerInfo" id="hmc_type_tree_manufacturer_info"/>
			</explorer-tree:navigation-node>
		</explorer-tree:explorer-tree>
	</context>

</config>
